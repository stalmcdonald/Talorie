<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cm.talorie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cm.talorie.LaunchScreen"
            android:label="@string/app_name" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cm.talorie.MainActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.cm.talorie.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CalculatorActivity" android:screenOrientation="portrait" />
        <activity android:name=".TallyCaloriesActivity" android:screenOrientation="portrait" />
        <activity android:name=".PicProgressActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".TotalBodyActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".TalorieInfo" />
        <activity android:name=".LegActivity" />
    </application>

</manifest>